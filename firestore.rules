rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção 'goals'
    match /goals/{goalId} {
      // Permite que um usuário crie, leia, atualize e delete suas próprias metas.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Regras para a coleção 'tasks'
    match /tasks/{taskId} {
      // Permite que um usuário crie, leia, atualize e delete suas próprias tarefas.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Nega todas as outras operações por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
